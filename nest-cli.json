{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../database/**/*",
        "exclude": "../database/seeds/*",
        "outDir": "dist/database"
      },
      {
        "include": "../database/**/*",
        "exclude": "../database/agency_db.sqlite",
        "outDir": "dist/database"
      },
      {
        "include": "./shared/mail/templates/",
        "watchAssets": true
      }
    ],
    "plugins": ["@nestjs/swagger"]
  },
  "generateOptions": {
    "spec": false
  }
}
